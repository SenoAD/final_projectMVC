@model RoamLab.BLL.DTO.CreateHotelPlaceDTO

@{
    ViewData["Title"] = "CreateHotelPlace";
    List<LocationDTO> locations = ViewBag.Locations;
}

<h1>Create Hotel Place</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateHotelPlace">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber" class="control-label"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LocationID" class="control-label">Location Name</label>
                <select asp-for="LocationID" class="form-control">
                    <option value="">-- Select Location --</option>
                    @foreach (var location in locations)
                    {
                        <option value="@location.LocationID">@location.City</option>
                    }
                </select>
                <span asp-validation-for="LocationID" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="CategoryID" type="hidden" value="1" />
            </div>
            <div class="form-group">
                <label asp-for="Facilitation" class="control-label"></label>
                <textarea asp-for="Facilitation" class="form-control" rows="4"></textarea>
                <span asp-validation-for="Facilitation" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
